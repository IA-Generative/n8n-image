{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "enabledManagers": [
    "dockerfile",
    "npm"
  ],
  "docker": {
    "enabled": true,
    "automerge": false,
    "major": {
      "automerge": false
    }
  },
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "n8nio/n8n"
      ],
      "groupName": "n8n base image",
      "automerge": false,
      "schedule": [
        "before 6am on monday"
      ],
      "commitMessagePrefix": "‚¨ÜÔ∏è ",
      "commitMessageTopic": "n8n base image",
      "commitMessageExtra": "to {{newVersion}}",
      "labels": [
        "dependencies",
        "docker",
        "automerge"
      ],
      "assignees": [
        "@IA-Generative"
      ],
      "prPriority": 10,
      "minimumReleaseAge": "3 days",
      "patch": {
        "automerge": true
      },
      "minor": {
        "automerge": true
      },
      "major": {
        "automerge": false
      }
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "n8nio/n8n-runners"
      ],
      "groupName": "n8n-runners base image",
      "automerge": false,
      "schedule": [
        "before 6am on monday"
      ],
      "commitMessagePrefix": "‚¨ÜÔ∏è ",
      "commitMessageTopic": "n8n-runners base image",
      "commitMessageExtra": "to {{newVersion}}",
      "labels": [
        "dependencies",
        "docker",
        "automerge"
      ],
      "assignees": [
        "@IA-Generative"
      ],
      "prPriority": 10,
      "minimumReleaseAge": "3 days",
      "patch": {
        "automerge": true
      },
      "minor": {
        "automerge": true
      },
      "major": {
        "automerge": false
      }
    },
    {
      "matchDatasources": [
        "npm"
      ],
      "matchPackagePatterns": [
        "@opentelemetry/*",
        "winston"
      ],
      "groupName": "OpenTelemetry dependencies",
      "schedule": [
        "before 6am on monday"
      ],
      "commitMessagePrefix": "‚¨ÜÔ∏è ",
      "labels": [
        "dependencies",
        "npm"
      ],
      "automerge": false,
      "patch": {
        "automerge": true
      },
      "minor": {
        "automerge": true
      },
      "major": {
        "automerge": false
      }
    },
    {
      "matchDatasources": [
        "npm"
      ],
      "matchPackageNames": [
        "n8n-nodes-imap"
      ],
      "groupName": "n8n custom nodes",
      "schedule": [
        "before 6am on monday"
      ],
      "commitMessagePrefix": "‚¨ÜÔ∏è ",
      "labels": [
        "dependencies",
        "npm",
        "n8n-nodes"
      ],
      "automerge": false,
      "patch": {
        "automerge": true
      },
      "minor": {
        "automerge": true
      }
    }
  ],
  "prConcurrentLimit": 3,
  "prCreation": "immediate",
  "prHourlyLimit": 2,
  "timezone": "Europe/Paris",
  "labels": [
    "dependencies"
  ],
  "assignees": [],
  "reviewers": [],
  "commitMessageAction": "Update",
  "commitMessagePrefix": "‚¨ÜÔ∏è ",
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ü§ñ Dependency Updates Dashboard"
}