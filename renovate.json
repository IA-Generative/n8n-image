{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "dockerfile",
    "npm"
  ],
  "ignorePaths": [
    "**/node_modules/**"
  ],
  "npm": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "enabled": true,
      "automerge": false,
      "major": {
        "automerge": false
      }
    },
    {
      "description": "n8n base image in n8n/Dockerfile",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "n8nio/n8n"
      ],
      "groupName": "n8n base image",
      "automerge": false,
      "schedule": [
        "before 6am on monday"
      ],
      "commitMessagePrefix": "‚¨ÜÔ∏è ",
      "commitMessageTopic": "n8n base image",
      "commitMessageExtra": "to {{newVersion}}",
      "labels": [
        "dependencies",
        "docker",
        "n8n"
      ],
      "prPriority": 10,
      "minimumReleaseAge": "3 days",
      "patch": {
        "automerge": true
      },
      "minor": {
        "automerge": true
      },
      "major": {
        "automerge": false
      }
    },
    {
      "description": "n8n-runners base image in n8n-runners/Dockerfile",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "n8nio/runners"
      ],
      "groupName": "n8n-runners base image",
      "automerge": false,
      "schedule": [
        "before 6am on monday"
      ],
      "commitMessagePrefix": "‚¨ÜÔ∏è ",
      "commitMessageTopic": "n8n-runners base image",
      "commitMessageExtra": "to {{newVersion}}",
      "labels": [
        "dependencies",
        "docker",
        "n8n-runners"
      ],
      "prPriority": 10,
      "minimumReleaseAge": "3 days",
      "patch": {
        "automerge": true
      },
      "minor": {
        "automerge": true
      },
      "major": {
        "automerge": false
      }
    },
    {
      "description": "OpenTelemetry dependencies in global/package.json",
      "matchDatasources": [
        "npm"
      ],
      "matchFileNames": [
        "global/package.json"
      ],
      "groupName": "OpenTelemetry dependencies (global)",
      "schedule": [
        "before 6am on monday"
      ],
      "commitMessagePrefix": "‚¨ÜÔ∏è ",
      "commitMessageTopic": "OpenTelemetry dependencies",
      "commitMessageExtra": "in global/package.json",
      "labels": [
        "dependencies",
        "npm",
        "opentelemetry",
        "global"
      ],
      "automerge": false,
      "minimumReleaseAge": "3 days",
      "patch": {
        "automerge": true
      },
      "minor": {
        "automerge": true
      },
      "major": {
        "automerge": false
      },
      "matchPackageNames": [
        "/@opentelemetry/*/"
      ]
    },
    {
      "description": "Winston and Flat utilities in global/package.json",
      "matchDatasources": [
        "npm"
      ],
      "matchFileNames": [
        "global/package.json"
      ],
      "matchPackageNames": [
        "winston",
        "flat"
      ],
      "groupName": "Utility dependencies (global)",
      "schedule": [
        "before 6am on monday"
      ],
      "commitMessagePrefix": "‚¨ÜÔ∏è ",
      "commitMessageTopic": "Utility dependencies",
      "commitMessageExtra": "in global/package.json",
      "labels": [
        "dependencies",
        "npm",
        "utilities",
        "global"
      ],
      "automerge": false,
      "minimumReleaseAge": "7 days",
      "patch": {
        "automerge": true
      },
      "minor": {
        "automerge": true
      },
      "major": {
        "automerge": false
      }
    },
    {
      "enabled": true,
      "description": "n8n custom nodes in nodes/package.json",
      "matchDatasources": [
        "npm"
      ],
      "matchFileNames": [
        "nodes/package.json"
      ],
      "matchPackageNames": [
        "n8n-nodes-imap"
      ],
      "groupName": "n8n custom nodes",
      "schedule": [
        "before 6am on monday"
      ],
      "commitMessagePrefix": "‚¨ÜÔ∏è ",
      "commitMessageTopic": "n8n custom nodes",
      "commitMessageExtra": "to {{newVersion}}",
      "labels": [
        "dependencies",
        "npm",
        "n8n-nodes"
      ],
      "automerge": false,
      "minimumReleaseAge": "3 days",
      "patch": {
        "automerge": true
      },
      "minor": {
        "automerge": true
      },
      "major": {
        "automerge": false
      }
    },
    {
      "description": "Playwright Docker images in playwright-mcp/Dockerfile",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "mcr.microsoft.com/playwright",
        "mcr.microsoft.com/playwright/mcp"
      ],
      "groupName": "Playwright Docker images",
      "automerge": false,
      "schedule": [
        "before 6am on monday"
      ],
      "commitMessagePrefix": "‚¨ÜÔ∏è ",
      "commitMessageTopic": "Playwright Docker images",
      "commitMessageExtra": "to {{newVersion}}",
      "labels": [
        "dependencies",
        "docker",
        "playwright"
      ],
      "prPriority": 5,
      "minimumReleaseAge": "3 days",
      "patch": {
        "automerge": true
      },
      "minor": {
        "automerge": true
      },
      "major": {
        "automerge": false
      }
    }
  ],
  "prConcurrentLimit": 11,
  "prCreation": "immediate",
  "prHourlyLimit": 10,
  "timezone": "Europe/Paris",
  "labels": [
    "dependencies"
  ],
  "assignees": [],
  "reviewers": [],
  "recreateWhen": "always",
  "commitMessageAction": "Update",
  "commitMessagePrefix": "‚¨ÜÔ∏è ",
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ü§ñ Dependency Updates Dashboard"
}